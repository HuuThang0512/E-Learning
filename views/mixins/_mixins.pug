
mixin topbarLogin(text="", textBtn = "", linkBtn="#") 
    .topbar-login 
        .topbar-left 
            a.logo.topbar-logo(href="#") 
                include ../icons/_logo
        .topbar-right  
            .topbar-right-login 
                p= text
                a(href= linkBtn)
                    +blurBtnPri(textBtn)

mixin topbarHome() 
    .topbar
        .topbar-home
            .topbar-left 
                a.topbar-logo(href="#") 
                    include ../icons/_logo
                .topbar-search 
                    label(for="topbar-search-input").topbar-search-icon
                        //- include ../images/icons/_icon-search
                        img(src="./images/icons/icon-search.svg", alt="")
                    input.topbar-search-input#topbar-search-input(type="text" placeholder="What do you want to learn...")
            .topbar-right
                a.topbar-right-home.topbar-right-direction.txt-hv-underline(href="./index.html") Home 
                a.topbar-right-courses.topbar-right-direction.txt-hv-underline(href="./courses.html") Courses 
                a.topbar-right-my-courses.topbar-right-direction.click-item(href="./courses.html") My Courses 
                a.topbar-right-cart.click-item(href="#") 
                    include ../icons/_icon-cart
                .topbar-login-block
                    a.topbar-home-register(href="./register.html")
                        +blurBtnPri("Create Account")  
                    a.topbar-home-signin(href="sign_in.html")
                        +solidBtnPri("Sign in")
                img.user-avatar.click-item(srcSet="./images/user-avatar.png 2x", alt="avatar")

mixin cateItem(img="", title="", count="") 
    .category-item.button
        .category-item-icon
            img(srcSet= img, alt="")
        .category-item-text 
            .category-item-title= title
            .category-item-count= count

mixin bestCourse(img, type="code", price=0, desc="", rating="", count="", color="orange")
    .best-course-item.button
        .best-course-image
            img(srcSet= img, alt="") 
        .best-course-header 
            .best-course-type(style=`--color: ${color}`)= type
            .best-course-price= price
        .best-course-desc.text-hover= desc
        .best-course-line.line-full
        .best-course-footer     
            .best-course-rating 
                include ../icons/_icon-star
                span= rating
            .best-course-count 
                include ../icons/_icon-user
                span= count
            
mixin featureItem(img, type, salePrice, firstPrice="", name, avatar, author, rating, ratingCount, studentCount, level, time, color)
    .feature-item.button
        .feature-image 
            img(srcSet= img, alt="")
        .feature-content 
            .feature-content-top 
                .feature-type(style=`--color: ${color}`)= type
                .feature-price
                    if salePrice 
                        .feature-sale-price= salePrice
                        .feature-first-price= firstPrice
                    else 
                        feature-first-price= firstPrice
            .feature-name.text-hover= name
            .feature-author-rating 
                .feature-author 
                    .feature-author-avatar 
                        img(srcSet= avatar, alt="")
                    .feature-author-name= author
                .feature-rating     
                    include ../icons/_icon-star
                    span.feature-rating-point= rating
                    span.feature-rating-count= ratingCount 
            .feature-line.line-full
            .feature-footer 
                .feature-count-student.feature-footer-item 
                    include ../icons/_icon-user
                    span= studentCount
                .feature-level.feature-footer-item
                    include ../icons/_icon-level
                    span= level
                .feature-time.feature-footer-item
                    include ../icons/_icon-clock
                    span= time

                
mixin topAuthor(img, name="", subject="", rating, count)
    .top-author-item.button
        .top-author-image 
            img(srcSet= img, alt="")
        .top-author-content 
            .top-author-name.text-hover= name
