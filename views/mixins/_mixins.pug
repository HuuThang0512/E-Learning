mixin selective(label="", currentValue="", items)
    .selective
        .selective-label= label
        .selective-section
            p= currentValue 
            include ../icons/_icon-arrow-down
            ul.selective-items
                each val in items 
                    li.selective-item.click-item= val
         

mixin courseItem(img, type, name, rating, count, price)
    .course-item
        .course-image 
            img.course-img(srcSet= img, alt="course-img")
        .course-type-name 
            p.course-type.type(style="--color: #342F98")= type
            .course-name= name
        .course-line
        .course-rate-amount
            .course-rating.rating 
                include ../icons/_icon-star
                span.course-rating-point.rating-point= rating
            .course-count-student 
                .course-count-icon.icon
                    include ../icons/_icon-user
                span.course-count-num= count
        .course-line
        .course-price-more 
            .course-price= price
            .course-more
                include ../icons/_icon-more
                ul.course-edit 
                    li.course-edit-item View Details
                    li.course-edit-item Edit Course
                    li.course-edit-item Delete Course

