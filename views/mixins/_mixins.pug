mixin blurBtnPri(text= "", icon=false)
    .button-blur-primary.button
        span= text
        if icon 
            .btn-icon-arrow-right 
                include ../icons/_icon-arrow-right

mixin solidBtnPri(text="", icon=false)
    .button-solid-primary.button
        span= text
        if icon 
            .btn-icon-arrow-right 
                include ../icons/_icon-arrow-right